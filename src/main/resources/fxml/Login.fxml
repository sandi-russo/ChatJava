<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.client.controller.Login">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Label text="Bentornato!">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button onAction="#gestisciLogin" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Login" />
    <Label fx:id="feedbackLabel" textFill="RED" />
    <Hyperlink onAction="#vaiARegistrazione" text="Non hai un account? Registrati" />
</VBox>